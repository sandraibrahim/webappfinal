doctype=html
html
	head
		title Update Contact
		script(type='text/javascript', href='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN", crossorigin="anonymous")
		script(type='text/javascript', href='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js', integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q", crossorigin="anonymous")
		script(type='text/javascript', href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js', integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl", crossorigin="anonymous")
		
		link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css', integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",crossorigin="anonymous")

		style(type="text/css").
			body {
				background-color: whitesmoke;
			}

			#parent > p {
				display: inline-block;
			}

			.border {
				border-style: solid;
				border-width: 2px;
				width: 30%;
			}

	body
		nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
			.container-fluid
				a(class="navbar-brand" href="/login") Sandra's Final Project
				button(class="navbar-toggler" type="button" 
					data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
					aria-controls="navbarNavAltMarkup" aria-expanded="false" 
					aria-label="Toggle navigation")
				div(class="collapse navbar-collapse" id="navbarNavAltMarkup")
					div(class="navbar-nav")
						a(class="nav-link" href="/contacts") Contacts
						a(class="nav-link" href="/logout") Logout

		div(class="d-flex justify-content-center p-5")
			div(class="card w-50")
				div(class="card-header text-center") Update Contact
				div(class="text-center")
				div(class="card-body")
					div(class="text-center")
						form(action='/update', method='POST')
							div(class="input-group")
								div(class="input-group-prepend")
									if contact_info.prefix == "Mr." 
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Mr.", checked) 
											| Mr.
									else
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Mr.") 
											| Mr.
									if contact_info.prefix == "Mrs."
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Mrs.", checked) 
											| Mrs.
									else
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Mrs.") 
											| Mrs.
									if contact_info.prefix == "Ms."
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Ms.", checked) 
											| Ms.
									else
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Ms.") 
											| Ms.
									if contact_info.prefix == "Dr."
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Dr.", checked) 
											| Dr.
									else
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Dr.") 
											| Dr.

								div(class="input-group mb-3")
									span(class="input-group-text", id="basic-addon1") First Name
									input(type="text", name="fname", class="form-control", value = contact_info.fname) 
									span(class="input-group-text", id="basic-addon1") Last Name
									input(type="text", name="lname", class="form-control", value = contact_info.lname) 
									 

								div(class="input-group mb-3")
									span(class="input-group-text", id="basic-addon1") Street
									input(type="text", name="street", class="form-control", value = contact_info.street) 
									span(class="input-group-text", id="basic-addon1") City
									input(type="text", name="city", class="form-control", value = contact_info.city)

								div(class="input-group mb-3")
									span(class="input-group-text", id="basic-addon1") State
									select(name="state", class="form-select")
										if contact_info.state == "NJ"
											option(value="NJ", selected) NJ
										else
											option(value="NJ") NJ
										if contact_info.state == "NY"
											option(value="NY", selected) NY
										else
											option(value="NY") NY
										if contact_info.state == "PA"
											option(value="PA", selected) PA
										else
											option(value="PA") PA
										if contact_info.state == "CT"
											option(value="CT", selected) CT
										else
											option(value="CT") CT
									span(class="input-group-text", id="basic-addon1") Zip
									input(type="text", name="zip", value = contact_info.zip)

								div(class="input-group mb-3")
									span(class="input-group-text", id="basic-addon1") Phone
									input(type="text", name="phone", class="form-control" value = contact_info.phone) 

								div(class="input-group mb-3")
									span(class="input-group-text", id="basic-addon1") Email
									input(type="text", name="email", class="form-control" value = contact_info.email)

								div(class="d-flex justify-content-center input-group text-center")
									span(class="input-group-text", id="basic-addon1") How may we contact you?
								
								div(class="d-flex justify-content-center input-group text-center")
									div(class="form-check form-check-inline" )
										div(class="form-check form-check-inline" )
											if contact_info.con_phone != null
												input(class="form-check-input", type="checkbox", name="con_phone", value="con_phone", checked) 
												label(class="form-check-label") Phone
											else
												input(class="form-check-input", type="checkbox", name="con_phone", value="con_phone") 
												label(class="form-check-label") Phone

										div(class="form-check form-check-inline" )
											if contact_info.con_mail != null
												input(class="form-check-input", type="checkbox", name="con_mail", value="con_mail", checked) 
												label(class="form-check-label") Mail
											else
												input(class="form-check-input", type="checkbox", name="con_mail", value="con_mail") 
												label(class="form-check-label") Mail

										div(class="form-check form-check-inline" )
											if contact_info.con_email != null
												input(class="form-check-input", type="checkbox", name="con_email", value="con_email", checked)  
												label(class="form-check-label") Email
											else
												input(class="form-check-input", type="checkbox", name="con_email", value="con_email") 
												label(class="form-check-label") Email
										
										div(class="form-check form-check-inline" )
											if contact_info.con_any != null
												input(class="form-check-input", type="checkbox", name="con_any", value="con_any", checked)
												label(class="form-check-label") Any
											else
												input(class="form-check-input", type="checkbox", name="con_any", value="con_any")
												label(class="form-check-label") Any
							input(name= "id", type= "hidden", value = contact_info._id) 

							div(class="d-flex justify-content-center input-group text-center")
								button(type="submit" class="btn btn-primary") Save!

doctype=html
html
	head
		title Mailer Form
		script(type='text/javascript', href='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN", crossorigin="anonymous")
		script(type='text/javascript', href='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js', integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q", crossorigin="anonymous")
		script(type='text/javascript', href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js', integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl", crossorigin="anonymous")
		
		link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css', integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",crossorigin="anonymous")


	style(type="text/css").
		body {
			background-color: whitesmoke;
		}
		#parent > p {
			display: inline-block;
		}

		.border {
			border-style: solid;
			border-width: 2px;
			width: 30%;
		}


	body
		nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
			.container-fluid
				a(class="navbar-brand" href="/login") Sandra's Final Project
				button(class="navbar-toggler" type="button" 
					data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
					aria-controls="navbarNavAltMarkup" aria-expanded="false" 
					aria-label="Toggle navigation")
				div(class="collapse navbar-collapse" id="navbarNavAltMarkup")
					div(class="navbar-nav")
						a(class="nav-link" href="/contacts") Contacts


		div(class="d-flex justify-content-center p-5")
			div(class="card w-50")
				div(class="card-header text-center") Create a Contact
				div(class="text-center")
				div(class="card-body")
					div(class="text-center")
						form(action='/thanks', method='POST')
							div(class="input-group")
								div(class="input-group-prepend")
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Mr.") 
											| Mr.
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Mrs.") 
											| Mrs.
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Ms.") 
											| Ms.
										div(class="form-check form-check-inline")
											input(type="radio", name="prefix", value="Dr.") 
											| Dr.
							div(class="input-group mb-3")
								span(class="input-group-text", id="basic-addon1") First Name
								input(type="text", name="fname", class="form-control",placeholder="First")
								span(class="input-group-text", id="basic-addon1") Last Name
								input(type="text", name="lname", class="form-control",placeholder="Last")
								
							div(class="input-group mb-3")
								span(class="input-group-text", id="basic-addon1") Street
								input(type="text", name="street", class="form-control",placeholder="Street")
								span(class="input-group-text", id="basic-addon1") City
								input(type="text", name="city", class="form-control",placeholder="City")

							div(class="input-group mb-3")
								span(class="input-group-text", id="basic-addon1") State
								select(name="state", class="form-select")
									option(value="NJ") NJ
									option(value="NY") NY
									option(value="PA") PA
									option(value="CT") CT
								span(class="input-group-text", id="basic-addon1") Zip
								input(type="text", name="zip", class="form-control",placeholder="Zip")

							div(class="input-group mb-3")
								span(class="input-group-text", id="basic-addon1") Phone
								input(type="text", name="phone", class="form-control",placeholder="Phone")

							div(class="input-group mb-3")
								span(class="input-group-text", id="basic-addon1") Email
								input(type="text", name="email", class="form-control",placeholder="Email")
							
							
							div(class="d-flex justify-content-center input-group text-center")
								span(class="input-group-text", id="basic-addon1") How may we contact you?
							
							div(class="form-check form-check-inline" )
								div(class="form-check form-check-inline" )
									input(class="form-check-input", type="checkbox", name="con_phone", value="con_phone") 
									label(class="form-check-label") Phone
								div(class="form-check form-check-inline" )
									input(class="form-check-input", type="checkbox", name="con_mail", value="con_mail") 
									label(class="form-check-label") Mail
								div(class="form-check form-check-inline" )
									input(class="form-check-input", type="checkbox", name="con_email", value="con_email") 
									label(class="form-check-label") Email
								div(class="form-check form-check-inline" )
									input(class="form-check-input", type="checkbox", name="con_any", value="con_any") 
									label(class="form-check-label") Any

							div(class="d-flex justify-content-center input-group text-center")
								button(type="submit" class="btn btn-primary") Submit!
